@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class = "col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class = "col-6 text-end">
            <a asp-controller = "Category" asp-action = "Create" class="btn btn-outline-primary">
               <i class="bi bi-plus-lg"></i> &nbsp; New Category
            </a>
        </div>
    </div>
</div>

<table class = "table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                DisplayOrder
            </th>
            <th>
                Actions
            </th>
            <th/>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width = "50%">
                    @obj.Name
                </td>
                <td width = "50%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="btn-group" role="group" style="width:100px">
                        <a type="button" class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square p-1"></i> Edit
                        </a>
 
                    </div>
                </td>
                <td>
                    <div class="btn-group" role="group" style="width:100px">
                        <a type="button" class="btn btn-outline-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-trash3 p-1"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>