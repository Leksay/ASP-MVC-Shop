@model IEnumerable<BulkiBook.Models.Company>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-outline-primary">
                <i class="bi bi-plus-lg"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
</div>

<table class="table" id="companiesTbl" table-bordered table-striped style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>StreetAddress</th>
            <th>City</th>
            <th>State</th>
            <th>PostalCode</th>
            <th>PhoneNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <script src="~/js/company.js"></script>
}