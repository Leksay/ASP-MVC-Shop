    <div class="row pt-4">
        <div class = "col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class = "col-6 text-end">
            <a asp-controller = "Product" asp-action = "Upsert" class="btn btn-outline-primary">
               <i class="bi bi-plus-lg"></i> &nbsp; Create New Product
